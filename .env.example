# DashScope/Bailian Configuration (Required)
DASHSCOPE_API_KEY=your_dashscope_api_key_here
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/api/v1

# Bailian App Configuration
# Option 1: Single app (legacy, for backward compatibility)
BAILIAN_APP_ID=your_bailian_app_id_here

# Option 2: Multiple apps mapping (recommended for v0.2.0+)
# Format: JSON string mapping model names to app IDs
# Example: BAILIAN_APP_MAPPING='{"qwen-plus":"app-id-1","qwen-turbo":"app-id-2"}'
# BAILIAN_APP_MAPPING='{"my-reasoning-model":"your_app_id_1","my-fast-model":"your_app_id_2"}'

# Reasoning Configuration
BAILIAN_REASONING_DELTA_MAX=180

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
WORKERS=1

# CORS Settings
CORS_ALLOW_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Optional: OpenAI API Key (for testing/comparison)
# OPENAI_API_KEY=your_openai_api_key_here

# Optional: Rate Limiting
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_PERIOD=60

# Optional: API Authentication
# API_KEY_HEADER=X-API-Key
# API_KEYS=["key1", "key2"]